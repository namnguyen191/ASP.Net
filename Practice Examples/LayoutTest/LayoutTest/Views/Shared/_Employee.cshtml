@model LayoutTest.Models.Employee

<table style="font-family:Arial; border:1px solid; width:300px">
    <tr>
        <td>
            <img src="@Url.Content(Model.Photo)" alt="@Model.AlternateText" style="width:125px; height:100px;" />
        </td>
        <td>
            <table>
                <tr>
                    <td><b>Name:</b></td>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <td><b>Age:</b></td>
                    <td>@Model.Age</td>
                </tr>
                <tr>
                    <td><b>Gender:</b></td>
                    <td>@Model.Gender</td>
                </tr>
                <tr>
                    <td><b>Salary:</b></td>
                    <td>@Model.Salary</td>
                </tr>
            </table>
        </td>
    </tr>
</table>
