@model FinalProjectAquarius.Models.Customer
@{
    Layout = null;
}

<!DOCTYPE HTML>
<html lang="en">

<head>
    <title>Login Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/x-javascript">
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <link rel="stylesheet" href="~/CSS/style.css" type="text/css" media="all" />
    <link rel="stylesheet" href="~/CSS/font-awesome.css">
    <link href="//fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i" rel="stylesheet">
</head>

<body>
    <div class="header-w3l">
        <h1>
            <span>A</span>quarius
            <span>U</span>ser
            <span>L</span>ogin
        </h1>
    </div>
    <div class="main-content-agile">
        <div class="sub-main-w3">
            <h2>Login Here</h2>
            <form action="Index" method="post">
                <div class="pom-agile">
                    <span class="fa fa-user-o" aria-hidden="true"></span>
                    @Html.TextBoxFor(model => model.email, new { placeholder = "Email", type = "email", required = "required" })
                    @*<input placeholder="E-mail" name="Name" class="user" type="email" required>*@
                </div>
                <div class="pom-agile">
                    <span class="fa fa-key" aria-hidden="true"></span>
                    @Html.TextBoxFor(model => model.passwrd, new { placeholder = "Password", type = "password", required = "required" })
                    @*<input placeholder="Password" name="Password" class="pass" type="password" required>*@
                </div>
                <div class="sub-w3l">
                    <div class="sub-agile">
                        <input type="checkbox" id="brand1" value="">
                        <label for="brand1">
                            <span></span>Remember me
                        </label>
                    </div>
                    @Html.ActionLink("Create An Account","CreateAccount")
                    <br>
                    <a href="#">Forgot Password?</a>
                    <div class="clear"></div>
                </div>
                <div class="right-w3l">
                    <input type="submit" value="Login">
                    <h2>@ViewBag.ErrorMessage</h2>
                </div>
            </form>
        </div>
    </div>
    <div class="footer">
        <p>
            &copy; 2018 Aquarius Online Store. All rights reserved
        </p>
    </div>
</body>

</html>
