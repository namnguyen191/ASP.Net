@model FinalProjectAquarius.Models.Customer

@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>

<head>
    <title>Account Information</title>
    <!-- Meta tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/x-javascript">
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!-- //Meta tags -->
    <!-- Stylesheet -->
    <link href="~/CSS/style3.css" rel='stylesheet' type='text/css' />
    <!-- //Stylesheet -->
    <!--fonts-->
    <link href="//fonts.googleapis.com/css?family=Josefin+Sans:300,400,600,700" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
    <!--//fonts-->
</head>

<body>
    <!--background-->
    @Html.HiddenFor(model => model.id)
    <h1 style="color:white">Your Account Information</h1>
    <div class="bg-w3layouts-main">
        <h2>Let us know more about you so that we can serve you better!</h2>
        <div class="form-content-agileinfo">
            <form action="Login" method="post">
                <div class="main-divs-agileits-w3layouts">
                    <div class="bottom-w3-agileits-space form-text1">
                        @Html.TextBoxFor(model => model.fname, new { placeholder = "First Name", type = "text", required = "required" })
                        @*<input type="text" name="fname" placeholder="First Name" required>*@
                    </div>
                    <div class="bottom-w3-agileits-space form-text2">
                        @Html.TextBoxFor(model => model.lname, new { placeholder = "Last Name", type = "text", required = "required" })
                        @*<input type="text" name="lname" placeholder="Last Name" required>*@
                    </div>
                </div>
                <div class="main-divs-agileits-w3layouts">
                    <div class="bottom-w3-agileits-space form-text1">
                        @Html.TextBoxFor(model => model.email, new { placeholder = "Email", type = "email", required = "required" })
                        @*<input type="text" name="email" placeholder="Email" required>*@
                    </div>
                    <div class="bottom-w3-agileits-space form-text2">
                        @Html.TextBoxFor(model => model.phoneNo, new { placeholder = "Phone Number", type = "text", })
                        @*<input type="text" name="phoneNo" placeholder="Phone Number">*@
                    </div>
                </div>

                <div class="bottom-w3-agileits-space">
                    @Html.TextBoxFor(model => model.address, new { placeholder = "Address", type = "text", })
                    @*<input type="text" name="Address" placeholder="Address">*@
                </div>
                <div class="bottom-text-wthree">
                    <h6>Do you want to subcribe to our daily mail?</h6>
                    <ul class="radio-section">
                        <li>
                            <input type="radio" id="a-option" name="selector1">
                            <label for="a-option">Yes</label>
                            <div class="check"></div>
                        </li>
                        <li>
                            <input type="radio" id="b-option" name="selector1">
                            <label for="b-option">No</label>
                            <div class="check">
                                <div class="inside"></div>
                            </div>
                        </li>
                    </ul>
                    <div class="clear"></div>
                </div>
                <input type="submit" value="Save Changes">
                <div class="clear"></div>
            </form>
        </div>
    </div>
    <!--copyright-->
    <div class="copy-right-w3-agile">
        <p>&copy; 2018 Aquarius Online Store .All Rights Reserved</p>
    </div>
    <!--//copyright-->

</body>

</html>
