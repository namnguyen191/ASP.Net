@model FinalProjectRevised.Models.customer

@{
    Layout = null;
}

<!DOCTYPE HTML>
<html lang="en">
<head>
    <title>Account Register Form Flat Responsive Widget Template :: w3layouts</title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Account Register Form Responsive Widget,Login form widgets, Sign up Web forms , Login signup Responsive web form,Flat Pricing table,Flat Drop downs,Registration Forms,News letter Forms,Elements" />
    <script type="application/x-javascript">
         addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
        function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Meta tag Keywords -->
    <!-- css files -->
    <link rel="stylesheet" href="~/CSS/accountCreateStyle.css" type="text/css" media="all" /> <!-- Style-CSS -->
    <link rel="stylesheet" href="~/CSS/font-awesome.css"> <!-- Font-Awesome-Icons-CSS -->
    <link href="//fonts.googleapis.com/css?family=Noto+Sans:400,400i,700,700i&amp;subset=cyrillic,cyrillic-ext,devanagari,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">

    <!-- //css files -->
</head>
<body>
    <!-- main -->
        <div class="header-main">
            <h2>Create Account</h2>
            <div class="header-bottom">
                <div class="header-right w3agile">
                    <div class="header-left-bottom agileinfo">
                        <form action="#" method="post">
                            <div class="icon1">
                                <i class="fa fa-user" aria-hidden="true"></i>
                                @Html.TextBoxFor(model => model.fname, new { placeholder = "First Name", type = "text", required = "required" })
                                @*<input type="text" placeholder="First Name" name="fname" required />*@
                            </div>
                            <div class="icon1">
                                <i class="fa fa-user" aria-hidden="true"></i>
                                @Html.TextBoxFor(model => model.lname, new { placeholder = "Last Name", type = "text", required = "required" })
                                @*<input type="text" placeholder="Last Name" name="lname" required />*@
                            </div>
                            <div class="icon1">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                @Html.TextBoxFor(model => model.email, new { placeholder = "Email", type = "email", required = "required" })
                                @*<input type="email" placeholder="Your Email" name="email" required />*@
                            </div>
                            <div class="icon1">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                                @Html.TextBoxFor(model => model.passwrd, new { placeholder = "Password", type = "password", required = "required" })
                                @*<input type="password" placeholder="Password" name="password" required />*@
                            </div>
                            <div class="bottom">
                                <input type="submit" value="Create account" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    <!--header end here-->
    <!-- copyright start here -->
    <div class="copyright">
        <p>© 2018 Aquarius Online Store. All rights reserved</p>
    </div>
    <!--copyright end here-->
</body>
</html>
