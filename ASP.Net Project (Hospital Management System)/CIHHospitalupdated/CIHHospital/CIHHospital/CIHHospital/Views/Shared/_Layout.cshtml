<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CIHHospotal</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="~/fonts/ionicons.min.css">
    <link rel="stylesheet" href="~/Content/Footer-Dark.css">
    <link rel="stylesheet" href="~/Content/styles.css">
    <link rel="stylesheet" href="~/Content/Team-Boxed.css" />
    <link rel="stylesheet" href="~/Content/Contact-FormModal-Contact-Form-with-Google-Map.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="banner">

        <nav class="navbar navbar-light navbar-expand-md">
            <div class="container">
                <a class="navbar-brand" href="~/Home/Index"><img src="~/img/Logo.png" id="logo" style="max-height:150px; margin-top:-100px"></a><button class="navbar-toggler" data-toggle="collapse" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navcol-1">
                    <ul class="nav navbar-nav mx-auto">
                        <li class="nav-item" role="presentation"><a class="nav-link active" href="~/Home/Index"><strong>Home</strong></a></li>
                        <li class="nav-item" role="presentation"><a class="nav-link" href="#"><strong>About Us</strong></a></li>
                        <li class="nav-item" role="presentation"><a class="nav-link" href="~/Home/DoctorLogin"><strong>Doctors</strong></a></li>
                        <li class="dropdown">
                            <a class="dropdown-toggle nav-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false" href="#"><strong>Services</strong></a>
                            <div class="dropdown-menu" role="menu"><a class="dropdown-item" role="presentation" href="#">First Item</a><a class="dropdown-item" role="presentation" href="#">Second Item</a><a class="dropdown-item" role="presentation" href="#">Third Item</a></div>
                        </li>
                        <li class="nav-item" role="presentation"><a class="nav-link" href="~/Home/Contact"><strong>Contact</strong></a></li>
                        <li class="nav-item" role="presentation"><a class="nav-link" href="~/Admin/Index"><strong>Admin</strong></a></li>
                        <li class="nav-item" role="presentation"><a class="nav-link" href="~/Home/Login"><i class="fa fa-user"></i></a></li>
                        <li class="nav-item" role="presentation"><a class="nav-link" href="~/Home/CreateAccount"><i class="fa fa-user-plus"></i></a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="carousel slide float-none" data-ride="carousel" id="carousel" style="height:400px;">
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item">
                    <img class="w-100 d-block" src="~/img/bg-banner.jpg" alt="Slide Image">
                    <div class="carousel-caption" style="background-position:auto;">
                        <h3 style="color:#e31010;"><strong>WELCOME TO CIH</strong></h3>
                        <p style="color:#e31010;"><strong>SERVICES YOU CAN TRUEST</strong></p>
                        <a href="~/Home/Appointment" class="btn btn-primary" id="appointment" style="background-color:#1a5396;">Make An Appointmetn</a>
                        @*<button class="btn btn-primary" type="button" id="appointment" style="background-color:#1a5396;" href="~/Home/Appointment">Make An Appointment</button>*@
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="w-100 d-block" src="~/img/lutheran-rich-text-panel.jpg" alt="Slide Image" style="width:100%;height:500px;">
                    <div class="carousel-caption">
                        <h3 style="color:#e31010;"><strong>WELCOME TO CIH</strong></h3>
                        <p style="color:#e31010;"><strong>WE PROVIDE BEST SERVICES FOR OUR PATIENTS</strong></p><a href="~/Home/Appointment" class="btn btn-primary" id="appointment" style="background-color:#1a5396;">Make An Appointmetn</a>
                    </div>
                </div>
                <div class="carousel-item active">
                    <img class="w-100 d-block" src="~/img/ban2.jpg" alt="Slide Image">
                    <div class="carousel-caption">
                        <h3 style="color:#e31010;">WELCOME TO CIH</h3>
                        <p style="color:#e31010;">WE PROVIDE THE BEST DOCTORS FOR OUR PATIENTS</p><a href="~/Home/Appointment" class="btn btn-primary" id="appointment" style="background-color:#1a5396;">Make An Appointmetn</a>
                    </div>
                </div>
            </div>
            <div><a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev"><span class="carousel-control-prev-icon"></span><span class="sr-only">Previous</span></a><a class="carousel-control-next" href="#carousel" role="button" data-slide="next"><span class="carousel-control-next-icon"></span><span class="sr-only">Next</span></a></div>
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0"></li>
                <li data-target="#carousel" data-slide-to="1"></li>
                <li data-target="#carousel" data-slide-to="2" class="active"></li>
            </ol>
        </div>
    </div>
    

    

    <div>@RenderBody()</div>
    <div class="footer-dark">
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-md-3 item">
                        <h3>Services</h3>
                        <ul>
                            <li><a href="#">Book Appointment</a></li>
                            <li><a href="#">Add more</a></li>
                            <li><a href="#">Add more</a></li>
                        </ul>
                    </div>
                    <div class="col-sm-6 col-md-3 item">
                        <h3>About</h3>
                        <ul>
                            <li><a href="#">About Us</a></li>
                            <li><a href="#">Contact Us</a></li>
                            <li><a href="#">Add more</a></li>
                        </ul>
                    </div>
                    <div class="col-md-6 item text">
                        <h3>CIH&nbsp;</h3>
                        <p>CIH is an international hospital that provide best services with newest technology in hospital.</p>
                    </div>
                    <div class="col item social"><a href="#"><i class="icon ion-social-facebook"></i></a><a href="#"><i class="icon ion-social-twitter"></i></a><a href="#"><i class="icon ion-social-snapchat"></i></a><a href="#"><i class="icon ion-social-instagram"></i></a></div>
                </div>
                <p class="copyright">City International Hospital © 2018</p>
            </div>
        </footer>
    </div>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script src="~/Scripts/Contact-FormModal-Contact-Form-with-Google-Map.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>